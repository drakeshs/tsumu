<h1>Listing server_groups</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Port</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @server_groups.each do |server_group| %>
      <tr>
        <td><%= server_group.name %></td>
        <td><%= server_group.port %></td>
        <td><%= link_to 'Show', server_group %></td>
        <td><%= link_to 'Edit', edit_server_group_path(server_group) %></td>
        <td><%= link_to 'Destroy', server_group, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

