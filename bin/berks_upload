#! /bin/bash
cd cookbooks/application --force
berks install
berks upload
cd ../..
cd cookbooks/database --force
berks install
berks upload

cd ../..
knife role from file roles/ottweb.rb
knife role from file roles/stallone.rb
knife role from file roles/database.rb

knife environment from file environments/development.json
knife environment from file environments/production.json
knife environment from file environments/staging.json